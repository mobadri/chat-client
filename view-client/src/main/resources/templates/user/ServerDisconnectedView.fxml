<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="com.chat.client.view.client.user.ServerDisconnectedViewController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </BorderPane.margin>
         <children>
            <Label text="Copyrights 2020 - JETS" textFill="#bfbfbf"/>
            <Region HBox.hgrow="ALWAYS"/>
            <JFXButton fx:id="goodbyeBtn" onAction="#handleGoodbyeBtn" text="Goodbye"/>
         </children>
      </HBox>
   </bottom>
   <center>
      <FontIcon iconColor="#bfbfbf" iconLiteral="fab-whatsapp" iconSize="200" BorderPane.alignment="CENTER">
         <font>
            <Font size="1.0"/>
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </BorderPane.margin>
      </FontIcon>
   </center>
   <top>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Text fill="#616161" strokeType="OUTSIDE" strokeWidth="0.0" text="Server Disconnected">
               <font>
                  <Font size="24.0"/>
               </font>
            </Text>
            <Text fill="#797979" layoutX="10.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="We will be up and running soon">
               <font>
                  <Font size="18.0"/>
               </font>
            </Text>
         </children>
      </VBox>
   </top>
</BorderPane>
